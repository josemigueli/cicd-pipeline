{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Full Stack Open Course Part3",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test:e2e": "cd e2e-tests && npm install && npm run cypress:run",
