    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@flydotio/dockerfile": "^0.5.2",
    "@stylistic/eslint-plugin-js": "^1.6.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.5.3"
